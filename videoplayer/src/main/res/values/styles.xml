<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/title_text</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="android:fitsSystemWindows">true</item>-->
        <!--<item name="android:cropToPadding">true</item>-->
        <item name="colorPrimaryDark">@color/title_text</item>
        <!--<item name="colorAccent">@color/colorAccent</item>-->
        <item name="colorAccent">@color/title_text</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="mypopupwindowstyle" parent="android:Animation">
        <item name="@android:windowEnterAnimation">@anim/head_in</item>  //进入时的动画
        <item name="@android:windowExitAnimation">@anim/head_out</item>    //退出时的动画
    </style>

</resources>
